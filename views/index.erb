<div class="row">
<!-- COLUMN ONE -->
    <div class="col-sm-6">
      <h3>Stylists</h3>

      <% if @stylists.any?() %>
        <ul>
          <% @stylists.each do |stylist| %>
          <li><a href="/stylist/<%= stylist.id %>"><%= stylist.name %></a></li>
          <% end %>
        </ul>
      <% else %>
      <p>
        There are no stylists. Use the form below to get started!
      </p>
      <% end %>

    </div>
<!-- COLUMN TWO -->
    <div class="col-sm-6">

    <h3>Clients</h3>

    <% if @clients.any?() %>
    <ul>
      <% @clients.each do |client| %>
      <li><%= client.name %></li>
      <% end %>
    </ul>
    <% else %>
    <p><b>Ready to add clients?</b></p>
      <p>Use the form below to add one.</p>
    <% end %>
  </div>


</div>
<hr>

<!-- SECOND ROW -->
<div class="row">
  <div class="col-sm-6">
    <h3>Add a stylist:</h3>
    <form class="form-group" action="/stylist_success" method="post">
      <label for="stylist_name">Name</label>
      <input class="form-control" type="text" name="stylist_name">
      <button class="btn btn-primary" type="submit">Add stylist</button>
    </form>
  </div>
  <div class="col-sm-6">
    <h3>Add a client</h3>
    <form class="form-group" action="/client_success/home" method="post">
      <label for="name">Name</label>
      <input class="form-control" type="text" name="name">
      <label for="notes">Notes</label>
      <input class="form-control" type="text" name="notes">
      <label for="stylists">Stylist</label>
      <select class="form-control" name="stylists">

        <% if @stylists.any?() %>
            <% @stylists.each do |stylist| %>
            <option><%= stylist.name %></option>
            <% end %>
        <% else %>
        <p>
          uh oh! No stylists have been added. Use the form on the left to add stylists before adding clients.
        </p>
        <% end %>


      </select>
      <button class="btn btn-primary" type="submit">Add client</button>
    </form>
  </div>
</div>
